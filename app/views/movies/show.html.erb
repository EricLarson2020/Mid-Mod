<h1>Movie<h1>

<strong>Movie Title: <%=@movie.title%></strong>
<strong>Movie Creation Year: <%=@movie.creation_year%></strong>
<strong>Movie Genre: <%=@movie.genre%></strong>
<% @movie.actors.sort_actors.each do |actor| %>
  <%= actor.name %>
  <% end %>
<strong>Average Age: <%=@movie.actors.average_age.round(1)%>

<h2>Submit New Actor</h2>

  <%= form_tag("/movies/#{@movie.id}/actors", method: :post) do %>
<%= label_tag :name %>
<%= text_field_tag :name %><br>
<%= label_tag :age %>
<%= text_field_tag :age %><br>
<%= submit_tag 'Submit' %>
<% end %>
